<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Mediterraneo"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

        <ImageButton
            android:id="@+id/imgRest1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/res1"
            />

        <TextView
            android:id="@+id/Res1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Can Forquilla:"
            android:textColor="@color/lightBlue"
            android:layout_toRightOf="@+id/imgRest1"
            android:textSize="50dp"
            android:fontFamily="@font/vogamedium"
            />

        <ImageView
            android:id="@+id/textRes1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/estrellas"
            android:layout_toRightOf="@+id/imgRest1"
            android:layout_below="@+id/Res1"
            />

        <Button
            android:id="@+id/reservaRes1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Reserva"
            android:textSize="10dp"
            android:backgroundTint="@color/lightBlue"
            android:textColor="@color/white"
            android:layout_below="@+id/textRes1"
            android:layout_toRightOf="@+id/imgRest1"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="180dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgRest2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/res4"
            />

        <TextView
            android:id="@+id/Res2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ostrya Celler del Ferrer:"
            android:textColor="@color/lightBlue"
            android:layout_toRightOf="@+id/imgRest2"
            android:textSize="30dp"
            android:fontFamily="@font/vogamedium"
            />

        <ImageView
            android:id="@+id/textRes4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/estrellas"
            android:layout_toRightOf="@+id/imgRest2"
            android:layout_below="@+id/Res2"
            android:layout_marginTop="15dp"
            />

        <Button
            android:id="@+id/reservaRes4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Reserva"
            android:textSize="10dp"
            android:backgroundTint="@color/lightBlue"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/imgRest2"
            android:layout_below="@+id/textRes4"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="370dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgRest3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/res6"
            />

        <TextView
            android:id="@+id/Res3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant La Gran Olla:"
            android:textColor="@color/lightBlue"
            android:layout_toRightOf="@+id/imgRest3"
            android:textSize="32dp"
            android:fontFamily="@font/vogamedium"
            />

        <ImageView
            android:id="@+id/textRes3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/estrellas"
            android:layout_toRightOf="@+id/imgRest3"
            android:layout_below="@+id/Res3"
            android:layout_marginTop="15dp"
            />

        <Button
            android:id="@+id/reservaRes3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="Reserva"
            android:textSize="10dp"
            android:backgroundTint="@color/lightBlue"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/imgRest3"
            android:layout_below="@+id/textRes3"
            />

    </RelativeLayout>


</FrameLayout>